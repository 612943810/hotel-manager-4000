@model LoginViewModel
<h1 class="text-danger">Login</h1>
<div asp-validation-summary="ModelOnly" class="text-secondary fw-bolder"></div>
<form method="post" asp-controller="Account" asp-action="Login">
    <div class="form-group row">
        <div class="form-col-sm-2">
            <label asp-for="Username">Username</label>
            <input type="text" class="form-control" asp-for="Username" />
            <span asp-validation-for="Username" class="text-secondary fw-bolder"></span>
        </div>
        <label asp-for="Password">Password</label>
        <input type="password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-secondary fw-bolder"></span>
        <br />
        
        <button type="submit" class=" btn btn-success mb">Login</button>

</form>
